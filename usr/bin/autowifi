#}




start_wpa_supplicant /tmp/autowifi.wpa_supplicant
wifi_scan > /tmp/${interface}.scan
. /tmp/${interface}.scan
if [ -n "$2" ]; then
    echo connecting to $1 with pw $2
    connect_with_pw "$1" "$2"
elif [ -n "$1" ]; then
    echo connecting to $1
    connect_to_network_by_ssid "$1"
else
    echo looping network now
    loop_over_networks
fi
