	print u"Length: [32;1m" + str(len(tweet)) + u"[m"

	if len(tweet) > 140:
		print u"[31;6mYour Tweet must be shorter than 140 characters.[m\n"
		exit()
	
	status = api.PostUpdate(tweet)
	
	
	

